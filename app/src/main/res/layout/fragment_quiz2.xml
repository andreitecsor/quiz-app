<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:theme="@style/AndreiTecsorsTheme"
    tools:context=".fragments.Quiz2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tecsor_andrei_fragment_q2_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_box">

        <ImageView
            android:id="@+id/tecsor_andrei_fragment_q2_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_slack_new_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tecsor_andrei_fragment_q2_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tecsor_andrei_fragment_q2_logo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tecsor_andrei_fragment_q2_tiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/quiz_type_answer"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/tecsor_andrei_fragment_q2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_model2"
            android:text="@string/quiz_submit"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tecsor_andrei_fragment_q2_til" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>